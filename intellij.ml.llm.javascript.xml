<idea-plugin package="com.intellij.ml.llm.javascript">
  <dependencies>
    <plugin id="JavaScript"/>
  </dependencies>

  <extensions defaultExtensionNs="com.intellij">
    <chatContextProvider implementation="com.intellij.ml.llm.javascript.chat.context.JSPreferableLanguageChatContextPartProvider"/>
    <projectTechnologiesChatContextProvider implementation="com.intellij.ml.llm.javascript.chat.context.JSTechnologiesChatContextProvider"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij.ml.llm">
    <documentationSupport language="JavaScript" implementationClass="com.intellij.ml.llm.javascript.LLMJavaScriptDocumentationSupport"/>
    <documentationSupport language="TypeScript" implementationClass="com.intellij.ml.llm.javascript.LLMJavaScriptDocumentationSupport"/>
    <documentationSupport language="HTML" implementationClass="com.intellij.ml.llm.javascript.LLMJavaScriptDocumentationSupport"/>

    <classContextBuilder language="JavaScript" implementationClass="com.intellij.ml.llm.javascript.context.JSClassContextBuilder"/>
    <classContextBuilder language="TypeScript" implementationClass="com.intellij.ml.llm.javascript.context.JSClassContextBuilder"/>

    <methodContextBuilder language="JavaScript" implementationClass="com.intellij.ml.llm.javascript.context.JSMethodContextBuilder"/>
    <methodContextBuilder language="TypeScript" implementationClass="com.intellij.ml.llm.javascript.context.JSMethodContextBuilder"/>

    <fileContextBuilder language="JavaScript" implementationClass="com.intellij.ml.llm.javascript.context.JSFileContextBuilder"/>
    <fileContextBuilder language="TypeScript" implementationClass="com.intellij.ml.llm.javascript.context.JSFileContextBuilder"/>

    <variableContextBuilder language="JavaScript" implementationClass="com.intellij.ml.llm.javascript.context.JSVariableContextBuilder"/>
    <variableContextBuilder language="TypeScript" implementationClass="com.intellij.ml.llm.javascript.context.JSVariableContextBuilder"/>
  </extensions>
</idea-plugin>
