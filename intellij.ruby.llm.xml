<idea-plugin package="com.intellij.ruby.llm">
  <dependencies>
    <plugin id="org.jetbrains.plugins.ruby"/>
  </dependencies>

  <extensions defaultExtensionNs="com.intellij">
    <projectTechnologiesChatContextProvider implementation="com.intellij.ruby.llm.RubyChatContextProvider"/>
    <chatContextProvider implementation="com.intellij.ruby.llm.RubyPreferableLanguageChatContextPartProvider"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij.ml.llm">
    <documentationSupport language="ruby" implementationClass="com.intellij.ruby.llm.LLMRubyDocumentationSupport"/>
    <methodContextBuilder language="ruby" implementationClass="com.intellij.ruby.llm.RubyMethodContextBuilder"/>
    <errorExplainFilterFactory implementation="com.intellij.ruby.llm.RubyStackTraceExplainFilter$RubyStackTraceExplainFilterFactory"/>
  </extensions>
</idea-plugin>
